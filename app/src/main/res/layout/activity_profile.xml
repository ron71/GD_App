<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/colorPrimaryTheme"
    android:orientation="vertical">



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your profile."
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#E6EE9C"
        android:textSize="25sp"
        android:layout_weight="3"
        android:textAlignment="center"
        />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:translationZ="5dp"
        android:backgroundTint="@color/backgroundDark">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_account_box_black_24dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="ROHAN KUMAR"
                    android:id="@+id/profile_name"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_mail_black_24dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="1605301@kiit.ac.in"
                    android:id="@+id/profile_mail"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="BRANCH :"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:layout_height="wrap_content"
                    android:id="@+id/branch_edt"
                    android:layout_width="match_parent"
                    android:hint="Type 'NIL' for faculty"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:maxEms="20"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="YEAR :"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:id="@+id/year_group"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="1ST"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2ND"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="3RD"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="4RTH"
                        android:layout_weight="1"/>
                </RadioGroup>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="50dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_supervisor_account_black_24dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="MEMBERS"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/member_recycler"
                android:layout_height="wrap_content"/>


        </LinearLayout>




    </android.support.v7.widget.CardView>
    </LinearLayout>