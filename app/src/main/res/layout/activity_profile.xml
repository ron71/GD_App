<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/colorPrimaryTheme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="@font/architects_daughter"
            android:text="Edit your profile."
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SAVE"
            android:id="@+id/save_btn"
            android:textStyle="bold"
            android:textSize="20sp"

            android:backgroundTint="#29B6F6"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:translationZ="15dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/backgroundDark">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_account_box_black_24dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="ROHAN KUMAR"
                    android:id="@+id/profile_name"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccentTheme"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_mail_black_24dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="1605301@kiit.ac.in"
                    android:id="@+id/profile_mail"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccentTheme"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="BRANCH :"
                    android:layout_gravity="center"
                    android:textColor="@color/skyblue"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/branch_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="Type 'NIL' for faculty"
                    android:inputType="text"
                    android:maxEms="20"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentTheme"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="YEAR :"
                    android:layout_gravity="center"
                    android:textColor="@color/skyblue"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:id="@+id/year_group"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/rb1"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorAccentTheme"
                        android:layout_weight="1"
                        android:text="1ST"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorAccentTheme"
                        android:text="2ND"
                        android:id="@+id/rb2"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorAccentTheme"
                        android:text="3RD"
                        android:id="@+id/rb3"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorAccentTheme"
                        android:text="4RTH"
                        android:id="@+id/rb4"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>




            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:id="@+id/member_des">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_verified_user_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/anonymous_pro"
                    android:text="You are a verified member of GD CLUB but you don't have the master control."
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memberList"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_supervisor_account_black_24dp"/>

                    <TextView
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="MEMBERS"
                        android:textAlignment="center"
                        android:textColor="@color/skyblue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/member_roll_edt1"
                        android:hint="ROLL NUMBER"
                        android:layout_marginHorizontal="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:id="@+id/super_control_btn1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verified_user_black_24dp"
                        android:backgroundTint="@color/backgroundDark"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/member_roll_edt2"
                        android:hint="ROLL NUMBER"
                        android:layout_marginHorizontal="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:id="@+id/super_control_btn2"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verified_user_black_24dp"
                        android:backgroundTint="@color/backgroundDark"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/member_roll_edt3"
                        android:hint="ROLL NUMBER"
                        android:layout_marginHorizontal="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:id="@+id/super_control_btn3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verified_user_black_24dp"
                        android:backgroundTint="@color/backgroundDark"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/member_roll_edt4"
                        android:hint="ROLL NUMBER"
                        android:layout_marginHorizontal="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:id="@+id/super_control_btn4"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verified_user_black_24dp"
                        android:backgroundTint="@color/backgroundDark"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/member_roll_edt5"
                        android:hint="ROLL NUMBER"
                        android:layout_marginHorizontal="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:id="@+id/super_control_btn5"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verified_user_black_24dp"
                        android:backgroundTint="@color/backgroundDark"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark"
                    android:id="@+id/member_item_card6">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/member_roll_edt6"
                        android:hint="ROLL NUMBER"
                        android:layout_marginHorizontal="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:id="@+id/super_control_btn6"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_verified_user_black_24dp"
                        android:backgroundTint="@color/backgroundDark"/>

                </LinearLayout>
            </LinearLayout>


            </LinearLayout>




        </android.support.v7.widget.CardView>
</LinearLayout>








